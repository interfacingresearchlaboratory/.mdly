NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Clerk (get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk webhook: set in Clerk Dashboard and Convex Dashboard
CLERK_WEBHOOK_SIGNING_SECRET=whsec_...
CLERK_WEBHOOK_SYNC_SECRET=your-shared-secret

# Electron auth: JWT template name for session token (Clerk Dashboard > JWT Templates). Default "convex" uses your Convex template.
# CLERK_SESSION_JWT_TEMPLATE=convex
#
# Electron auth (Clerk): In Clerk Dashboard > Paths, add these to "Allowed redirect URLs" (or Redirect allowlist):
#   - ${NEXT_PUBLIC_APP_URL}/api/auth/electron/callback  (e.g. http://localhost:3000 and https://this-week-web.vercel.app)
# Do NOT set CLERK_SIGN_IN_FORCE_REDIRECT_URL / CLERK_SIGN_UP_FORCE_REDIRECT_URL to a single path (e.g. /) or sign-in from /electron-auth will never hit the callback.

# Convex auth: set CLERK_JWT_ISSUER_DOMAIN in Convex Dashboard (Settings > Environment Variables)
# Use your Clerk Frontend API URL from the "convex" JWT template in Clerk Dashboard

# App URL for OAuth redirects (e.g. https://localhost:3000 in dev, https://yourdomain.com in prod)
NEXT_PUBLIC_APP_URL=http://localhost:3000