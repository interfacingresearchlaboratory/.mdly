{
  "extends": "@editor/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@editor/ui": ["../../packages/ui/src/index.ts"],
      "@editor/ui/utils": ["../../packages/ui/src/lib/utils.ts"],
      "fumadocs-mdx:collections/server": ["./.source/index"],
      "mdx-components": ["./mdx-components"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules", ".source"]
}
